<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/purple_BG"
    android:orientation="horizontal"
    android:fontFamily="@font/lato_light"
    tools:showIn="@layout/workout_complete">

    <ImageButton
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/spacer5"
        android:layout_width="14dp"
        android:layout_height="46dp"
        android:background="@drawable/spacer1" />

    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/left_circle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/iconuser" />

    5

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/left_name"
        android:layout_width="58dp"
        android:layout_height="66dp"
        android:text="Anna K."
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textAlignment="viewStart" />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/left_circles"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/iconfs" />

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/left_score"
        android:layout_width="59dp"
        android:layout_height="31dp"
        android:text="579"
        android:textColor="@color/white"
        android:textAlignment="viewStart" />

    <ImageButton
        android:layout_marginTop="16dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="-11dp"
        android:id="@+id/fire"
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:background="@drawable/iconburn" />

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="6dp"
        android:id="@+id/left_fire"
        android:layout_width="46dp"
        android:layout_height="96dp"
        android:text="66%"
        android:textColor="@color/white"
        android:textAlignment="viewStart" />

    <ImageButton
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/circles2"
        android:layout_width="136dp"
        android:layout_height="74dp"
        android:background="@drawable/iconmax" />


    <ImageButton
        android:layout_marginTop="35dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="102dp"
        android:id="@+id/music"
        android:layout_width="39dp"
        android:layout_height="28dp"
        android:background="@drawable/iconmusic" />

    <ImageButton
        android:layout_marginTop="0dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="-3dp"
        android:id="@+id/audio"
        android:layout_width="99dp"
        android:layout_height="93dp"
        android:background="@drawable/audio" />

    <ImageButton
        android:layout_marginTop="35dp"
        android:layout_marginRight="-100dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/bt1"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:background="@drawable/iconbt" />
</LinearLayout>