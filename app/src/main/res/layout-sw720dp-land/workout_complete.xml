
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_BG" >

    <include layout="@layout/workout_complete_top_nav" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:background="#00ffffff"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp">

        <VideoView
            android:background="#00ffffff"
            android:id="@+id/videoView"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-100dp"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <com.example.prototype1java.GoalPathView
            android:background="#00ffffff"
            android:layout_marginStart="250dp"
            android:layout_marginBottom="180dp"
            android:layout_marginTop="15dp"
            android:id="@+id/goal"
            android:layout_width="match_parent"
            android:layout_height="1300dp" />

        <com.example.prototype1java.ScorePathView
            android:background="#00ffffff"
            android:layout_marginStart="250dp"
            android:layout_marginBottom="180dp"
            android:layout_marginTop="15dp"
            android:id="@+id/path"
            android:layout_width="match_parent"
            android:layout_height="1300dp" />


        <TextView
            android:background="#00ffffff"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="730dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:fontFamily="@font/lato_light"
            android:paddingEnd="10dp"
            android:text="SCORE"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:background="#00ffffff"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="775dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:fontFamily="@font/lato_light"
            android:paddingEnd="10dp"
            android:text="GOAL"
            android:textAlignment="viewStart"
            android:textColor="#FFC800"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:background="#00ffffff"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_light"
            android:text="@string/workout_complete"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="52sp" />

        <LinearLayout
            android:layout_marginTop="50dp"
            android:background="#00ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:fontFamily="@font/lato_light">

            <TextView
                android:background="#00ffffff"
                android:id="@+id/score_counter"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lato_light"
                android:paddingEnd="10dp"
                android:text="@string/your_fitness_score_20"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:background="#00ffffff"
                android:id="@+id/score_count"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lato_light"
                android:paddingEnd="30dp"
                android:text="@string/your_score_20"
                android:textAlignment="viewEnd"
                android:textColor="#ffcb49"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:background="#00ffffff"
            android:id="@+id/textinput_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/lato_light"
            android:text="@string/progressing"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <TextView
            android:background="#00ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:fontFamily="@font/lato_light"
            android:text="@string/how_do_you_feel_about_your_fitness_journey"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="29sp" />

    <LinearLayout
        android:background="#00ffffff"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp">

        <com.example.prototype1java.ToggleImageButton
            android:id="@+id/discourage_button"
            android:layout_marginTop="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/discourage_button" />

        <com.example.prototype1java.ToggleImageButton
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/bored_button"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/bored_button" />

        <com.example.prototype1java.ToggleImageButton
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/neutral_button"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/neutral_button" />

        <com.example.prototype1java.ToggleImageButton
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/motivated_button"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/motivated_button" />

        <com.example.prototype1java.ToggleImageButton
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/amazing_button"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/amazing_button" />
    </LinearLayout>
dp        <ImageButton
            android:id="@+id/continue1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="330dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btncontinue"
            android:minWidth="350dp" />
    </FrameLayout>
</LinearLayout>

