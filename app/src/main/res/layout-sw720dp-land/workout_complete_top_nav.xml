<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_BG"
    android:orientation="horizontal"
    android:fontFamily="@font/lato_light"
    tools:showIn="@layout/workout_complete">


    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="14dp"
        android:id="@+id/left_circle"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/iconuser" />

    5

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/left_name"
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:text="Anna K."
        android:textSize="11sp"
        android:textColor="@color/white"
        android:textAlignment="viewStart" />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/left_circles"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/iconfs" />

    <TextView
        android:textSize="13sp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/left_score"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="579"
        android:textColor="@color/white"
        android:textAlignment="viewStart" />

    <ImageButton
        android:layout_marginTop="13dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/fire"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:background="@drawable/iconburn" />

    <TextView
        android:textSize="13sp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="6dp"
        android:id="@+id/left_fire"
        android:layout_width="52dp"
        android:layout_height="36dp"
        android:text="66%"
        android:textColor="@color/white"
        android:textAlignment="viewStart" />


    <ImageButton
        android:id="@+id/circles2"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/iconmax" />


    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="327dp"
        android:id="@+id/music"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/iconmusic" />

    <ImageButton
        android:layout_marginTop="-20dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/audio"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/audio" />

    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/bt1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/iconbt" />
</LinearLayout>